<!-- HERO -->
<section class="hero hero--custom has-text-centered pt-5">
	<div class="hero-body">
		<h2 class="subtitle">Les fruits du mois de:</h2>
		<h1 class="title title--hero is-uppercase"></h1>
	</div>
</section>
<!-- SECTION  -->
<section class="section is-flex is-flex-wrap-wrap is-justify-content-space-evenly section-fruits">
	{% for fruit in fruits %}
		<a href="{{path('fruit-info', {'fruitName': fruit.fruitName})}}" class="box products-box" style="background-image: url('/uploads/product/{{fruit.file}}');">
			<h2 class="title has-text-centered products-title">{{fruit.fruitName}}</h2>
		</a>
	{% endfor %}

</section>
