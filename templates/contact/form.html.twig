<!-- HERO -->
<section class="hero hero--custom has-text-centered pt-5">
	<div class="hero-body">
		<h1 class="title is-uppercase">Contact</p>
	</div>
</section>
<!-- SECTION  -->
<section class="section section-contact" style="background-image: url('/img/fruits-297410.png')">
	<div class="container is-max-desktop mt-5 mb-5">
		<div
			class="box">
			<!-- https://symfony.com/doc/current/div/form_customization.html -->
			{{ form_start(form)}}
			{% for message in app.flashes('success') %}
				<div class="notification is-success">
					{{ message }}
				</div>
			{% endfor %}

			<div class="field">
				<label class="label" for="contactName">
					{{form_label(form.nom)}}
				</label>
				<div class="control">
					{{form_widget(form.nom, {'attr': {'class': 'input'}})}}
				</div>
			</div>

			<div class="field">
				<label class="label" for="contactEmail">
					{{form_label(form.email)}}
				</label>
				<div class="control">
					{{form_widget(form.email, {'attr': {'class': 'input'}})}}
				</div>
			</div>

			<div class="field">
				<label class="label" for="contactMessage">
					{{form_label(form.message)}}
				</label>
				<div class="control" rows="5" cols="33">
					{{form_widget(form.message, {'attr': {'class': 'input'}})}}
				</div>
			</div>

			<div class="has-text-centered">
				{{form_widget(form.envoyer, {'attr': {'class': 'button is-link'}})}}
			</div>

			{{ form_end(form)}}

		</form>
	</div>
</section>
